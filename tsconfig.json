{
  "compilerOptions": {
    "noImplicitAny": true,
    "outDir": "build/types",
    "module": "esnext",
    "target": "ESNext",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": ["dom", "ESNext"],
    "moduleResolution": "node",
    "strict": true,
    "types": ["parse-json", "numbro", "lodash", "jquery", "bootstrap"],
    "typeRoots": ["./src/lib/external/typings/**/*.d.ts"]
  },
  "include": ["src/lib"],
  "exclude": ["src/lib/**/tests"]
}
